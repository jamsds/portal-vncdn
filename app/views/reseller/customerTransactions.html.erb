<div class="portal__main-center primary croped">
	<div class="dashboard">
		<div class="dashboard__container">
			<% if current_user.phone.nil? %>
      <div class="dashboard__container-message warning">
        <p><span class="alert_ic"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 20 20"><path d="M4.9,4A9.6,9.6,0,0,1,12,1a10.068,10.068,0,0,1,7.1,2.9A9.506,9.506,0,0,1,22,11a9.9,9.9,0,0,1-2.9,7.1A9.506,9.506,0,0,1,12,21,9.9,9.9,0,0,1,2,11,9.669,9.669,0,0,1,4.9,4ZM13,12V6H11v6Zm0,4V14H11v2Z" transform="translate(-2 -1)" fill="#d97917"/></svg></span><span>Please update your personal information</span></p>
      </div>
      <% end %>
			<% if @customer.phone.nil? %>
			<div class="dashboard__container-message warning">
        <p><span class="alert_ic"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 20 20"><path d="M4.9,4A9.6,9.6,0,0,1,12,1a10.068,10.068,0,0,1,7.1,2.9A9.506,9.506,0,0,1,22,11a9.9,9.9,0,0,1-2.9,7.1A9.506,9.506,0,0,1,12,21,9.9,9.9,0,0,1,2,11,9.669,9.669,0,0,1,4.9,4ZM13,12V6H11v6Zm0,4V14H11v2Z" transform="translate(-2 -1)" fill="#d97917"/></svg></span><span>This customer personal information not complete.</span></p>
      </div>
			<% end %>
			<div class="dashboard__container-border clearfix">
        <div class="dashboard__container-border-item mb-3 transaction">
          <div class="dashboard__container-border-item-heading">
            <h6><%= @startDateOfThisMonth %> - <%= @dateTodayOfThisMonth %></h6>
          </div>
          <div class="transaction">
            <div class="transaction-table">
              <table class="table croped mt-3 mb-0">
                <thead>
                  <tr>
                    <th>Type</th>
                    <th style="width: 50%">Description</th>
                    <th>Amount (VNĐ)</th>
                    <th>Payment</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @customer.credit.transactions.present? %>
                  <% @customer.credit.transactions.where(monthly: Date.today.strftime("%Y-%m")).order("created_at ASC").each do |transaction| %>
                  <tr>
                    <td><%= transaction.transaction_type %></td>
                    <td><%= transaction.description %></td>
                    <td><%= ApplicationController::FormatNumber.new(transaction.amount).formatPricing() %></td>
                    <td><% if transaction.stripe_id.nil? %>Credit<% else %><%= transaction.card_brand %> •••• <%= transaction.card_number %><% end %></td>
                    <td><span class="status status-<%= transaction.status %>"><%= transaction.status.capitalize %></span></td>
                  </tr>
                  <% end %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="dashboard__container-border-item transaction">
          <div class="dashboard__container-border-item-heading">
            <h6><%= @previousMonthWithYear %></h6>
          </div>
          <div class="transaction">
          	<div class="transaction-table"></div>
          </div>
        </div>
			</div>
		</div>
	</div>
</div>
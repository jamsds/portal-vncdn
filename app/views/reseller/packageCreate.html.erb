<div class="portal__main-heading">
	<a href="<%= reseller_url %>" class="btn btn-default btn-sm ml-2">
    <span class="back_ic">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12">
        <path d="M353.6,392.8v2H339.4l3.6,3.6-1.4,1.4-6-6,6-6,1.4,1.4-3.6,3.6Z" transform="translate(-335.6 -387.8)" fill="#333333"/>
      </svg>
    </span>
    <span>
      Back
    </span>
  </a>
</div>
<div class="portal__main-left expanded">
	<div class="panel">
		<div class="panel__list main">
			<div class="main__options-list">
				<div class="main__options-list-item clearfix" onclick="window.location = '<%= reseller_package_url %>'">
					<div class="main__options-list-item-ic">
						<div class="package_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18.1" viewBox="0 0 18 18.1"><path d="M168.4,143.5a2.106,2.106,0,0,1,.5,1.3v12.5a2.051,2.051,0,0,1-2,2h-14a2.051,2.051,0,0,1-2-2V144.8a2.106,2.106,0,0,1,.5-1.3l1.4-1.7a1.426,1.426,0,0,1,1.2-.6h12a1.425,1.425,0,0,1,1.2.6Zm-15.5-.3h13.8l-.9-1h-12Z" transform="translate(-150.9 -141.2)"/></svg>
						</div>
					</div>
					<div class="main__options-list-item-info">
						<h6>Package Management</h6>
						<small>Manage all packages</small> 
					</div>
					<div class="main__options-list-item-arrow"></div>
				</div>
				<div class="main__options-list-item clearfix active" onclick="window.location = '<%= reseller_package_create_url %>'">
					<div class="main__options-list-item-ic">
						<div class="add_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="17.9" height="18" viewBox="0 0 17.9 18"><path d="M55.9,141.2a2.051,2.051,0,0,1,2,2v14a2.051,2.051,0,0,1-2,2H42a1.816,1.816,0,0,1-1.4-.6,1.974,1.974,0,0,1-.6-1.4v-14a2.051,2.051,0,0,1,2-2Zm-1.9,10v-2H50v-4H48v4H44v2h4v4h2v-4Z" transform="translate(-40 -141.2)"/></svg>
						</div>
					</div>
					<div class="main__options-list-item-info">
						<h6>Create Package</h6>
						<small>Add new package</small> 
					</div>
					<div class="main__options-list-item-arrow">
						<div class="arrow_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="7.4" height="12" viewBox="0 0 7.4 12"><path d="M267.3,398.2l4.6-4.6-4.6-4.6,1.4-1.4,6,6-6,6Z" transform="translate(-267.3 -387.6)" fill="#f68100"/></svg>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="portal__main-center primary croped">
	<div class="dashboard">
		<div class="dashboard__container">
			<% if current_user.phone.nil? %>
			<div class="dashboard__container-message warning">
				<p class="mb-0 ml-0"><span class="alert_ic"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 20 20"><path d="M4.9,4A9.6,9.6,0,0,1,12,1a10.068,10.068,0,0,1,7.1,2.9A9.506,9.506,0,0,1,22,11a9.9,9.9,0,0,1-2.9,7.1A9.506,9.506,0,0,1,12,21,9.9,9.9,0,0,1,2,11,9.669,9.669,0,0,1,4.9,4ZM13,12V6H11v6Zm0,4V14H11v2Z" transform="translate(-2 -1)" fill="#d97917"/></svg></span><span>Please update your personal information</span></p>
			</div>
      <% end %>
			<div class="dashboard__container-card clearfix">
				<div class="dashboard__container-card">
					<div class="dashboard__container-card-item">
						<%= form_for [Package.new], url: {action: :packageAdd, controller: :reseller}, method: :post, html: { id: 'form', multipart: true } do |f|%>

							<div class="form-group">
								<%= f.label :name, 'Package Name' %>
								<%= f.text_field :name, class: 'form-control' %>
								<%= f.hidden_field :reseller, value: current_user.username %>
							</div>

							<div class="form-group">
								<%= f.label :bwd_limit, 'Bandwidth Limit' %>
								<%= f.text_field :bwd_limit, class: 'form-control' %>
								<small id="bwdHelp" class="form-text text-muted">We using Kilobyte. e.g 1MB = 1048576KB</small>
							</div>

							<div class="form-group">
								<%= f.label :stg_limit, 'Storage Limit' %>
								<%= f.text_field :stg_limit, class: 'form-control' %>
								<small id="stgHelp" class="form-text text-muted">We using Kilobyte. e.g 1MB = 1048576KB</small>
							</div>

							<div class="form-group">
								<%= f.label :bwd_price, 'Bandwidth Price' %>
								<%= f.text_field :bwd_price, class: 'form-control' %>
							</div>

							<div class="form-group">
								<%= f.label :bwd_price, 'Storage Price' %>
								<%= f.text_field :bwd_price, class: 'form-control' %>
							</div>
						  
						  <div class="form-actions mt-4">
						    <%= button_tag(type: "submit", class: "btn btn-default primary mr-3") do %>
						      Submit
						    <% end %>

						    <a href="<%= reseller_package_url %>" class="btn btn-light">Back</a>
						  </div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="portal__main-left expanded">
	<div class="panel">
		<div class="panel__heading">
			<a href="<%= reseller_url %>" class="btn btn-default btn-sm ml-2">
		    <span class="back_ic">
		      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12">
		        <path d="M353.6,392.8v2H339.4l3.6,3.6-1.4,1.4-6-6,6-6,1.4,1.4-3.6,3.6Z" transform="translate(-335.6 -387.8)" fill="#333333"/>
		      </svg>
		    </span>
		    <span>
		      Back
		    </span>
		  </a>
		</div>
		<div class="panel__list main">
			<div class="main__options-list">
				<a href="<%= reseller_customer_url %>" class="main__options-list-item clearfix active">
					<div class="main__options-list-item-ic">
						<div class="reseller_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" viewBox="0 0 18 20"><path d="M277.7,1115.6a2.051,2.051,0,0,1,2,2v14a2.051,2.051,0,0,1-2,2h-14a1.816,1.816,0,0,1-1.4-.6,1.974,1.974,0,0,1-.6-1.4v-14a2.051,2.051,0,0,1,2-2h1v-2h2v2h8v-2h2v2Zm-1,15v-1c0-.9-.7-1.6-2.1-2.2a9.96,9.96,0,0,0-3.9-.9,9.587,9.587,0,0,0-3.9.9c-1.3.6-2.1,1.3-2.1,2.2v1Zm-3.9-11.1a2.9,2.9,0,1,0,.9,2.1A2.878,2.878,0,0,0,272.8,1119.5Z" transform="translate(-261.7 -1113.6)"/></svg>
						</div>
					</div>
					<div class="main__options-list-item-info">
						<h6>Customers Management</h6>
						<small>Manage your customers</small> 
					</div>
					<div class="main__options-list-item-arrow">
						<div class="arrow_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="7.4" height="12" viewBox="0 0 7.4 12"><path d="M267.3,398.2l4.6-4.6-4.6-4.6,1.4-1.4,6,6-6,6Z" transform="translate(-267.3 -387.6)" fill="<%= current_user.color %>"/></svg>
						</div>
					</div>
				</a>
				<a href="<%= reseller_customer_url %>/create" class="main__options-list-item clearfix">
					<div class="main__options-list-item-ic">
						<div class="reseller_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="18" height="20" viewBox="0 0 18 20"><path d="M277.7,1115.6a2.051,2.051,0,0,1,2,2v14a2.051,2.051,0,0,1-2,2h-14a1.816,1.816,0,0,1-1.4-.6,1.974,1.974,0,0,1-.6-1.4v-14a2.051,2.051,0,0,1,2-2h1v-2h2v2h8v-2h2v2Zm-1,15v-1c0-.9-.7-1.6-2.1-2.2a9.96,9.96,0,0,0-3.9-.9,9.587,9.587,0,0,0-3.9.9c-1.3.6-2.1,1.3-2.1,2.2v1Zm-3.9-11.1a2.9,2.9,0,1,0,.9,2.1A2.878,2.878,0,0,0,272.8,1119.5Z" transform="translate(-261.7 -1113.6)"/></svg>
						</div>
					</div>
					<div class="main__options-list-item-info">
						<h6>Create Customer</h6>
						<small>Add new customers</small> 
					</div>
					<div class="main__options-list-item-arrow"></div>
				</a>
			</div>
		</div>
	</div>
</div>
<div class="portal__main-center primary croped">
	<div class="dashboard">
		<div class="dashboard__heading">
			<div class="dashboard__heading-action-list">
				<div class="dashboard__heading-action-item">
					<a href="<%= reseller_customer_url %>/create" class="btn btn-sm ml-2">
						<span class="add_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="22" height="16" viewBox="0 0 22 16"><path d="M486.5,983.4h3v2h-3v3h-2v-3h-3v-2h3v-3h2Zm3.7,5.1a14.793,14.793,0,0,1,5.3-1.1,15.237,15.237,0,0,1,5.3,1.1c1.9.7,2.7,1.7,2.7,2.9v2h-16v-2C487.5,990.2,488.4,989.3,490.2,988.5Zm8.1-4.3a3.867,3.867,0,1,1,1.2-2.8A3.631,3.631,0,0,1,498.3,984.2Z" transform="translate(-481.5 -977.4)"/></svg>
						</span>
						<span>Add Customer</span>
					</a>
				</div>
			</div>
		</div>
		<div class="dashboard__container">
			<% if current_user.phone.nil? %>
      <div class="dashboard__container-message warning">
        <p><span class="alert_ic"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 20 20"><path d="M4.9,4A9.6,9.6,0,0,1,12,1a10.068,10.068,0,0,1,7.1,2.9A9.506,9.506,0,0,1,22,11a9.9,9.9,0,0,1-2.9,7.1A9.506,9.506,0,0,1,12,21,9.9,9.9,0,0,1,2,11,9.669,9.669,0,0,1,4.9,4ZM13,12V6H11v6Zm0,4V14H11v2Z" transform="translate(-2 -1)" fill="#d97917"/></svg></span><span>Please update your personal information</span></p>
      </div>
      <% end %>
			<div class="dashboard__container-card clearfix">
				<div class="dashboard__container-card">
					<div class="dashboard__container-card-item">
						<div class="customer">
							<table class="table croped mb-0">
								<thead>
									<tr>
										<th>Customer Number</th>
										<th>Email</th>
										<th>Account Type</th>
										<th>UUID</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									<% @customers.all.each do |customer| %>
							      <tr>
							        <td><a href="<%= reseller_customer_url %>/<%= customer.username %>"><%= customer.uuid %></a></td>
							        <td><%= customer.email %></td>
							        <td><%= accountType(customer.accountType) %></td>
							        <td><%= customer.username %></td>
							        <td>
							          <%= link_to 'Delete', "#{reseller_customer_url}/#{customer.username}", data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-default primary outline btn-sm' %>
							        </td>
							      </tr>
							      <% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
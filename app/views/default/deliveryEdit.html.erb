<div class="portal__main-left expanded">
	<div class="panel">
		<div class="panel__heading">
			<span class="btn btn-default btn-sm ml-2">
				<a href="<%= root_url %>" class="back_ic"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12"><path d="M353.6,392.8v2H339.4l3.6,3.6-1.4,1.4-6-6,6-6,1.4,1.4-3.6,3.6Z" transform="translate(-335.6 -387.8)" fill="#f68100"/></svg></a>
			</span>
		</div>
		<div class="panel__list main">
			<div class="main__options-list">
				<div class="main__options-list-item clearfix<% if current_page?(cdn_url) %> active<% end %>" onclick="window.location = '/cdn/<%= params[:propertyId] %>/<%= params[:type] %>/reports?domain=<%= @response["name"] %>'">
					<div class="main__options-list-item-ic">
						<div class="was_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="12" viewBox="0 0 20 12"><path d="M681.3,1188.2h6v6l-2.3-2.3-6.3,6.3-4-4-6,6-1.4-1.4,7.4-7.4,4,4,4.9-4.9Z" transform="translate(-667.3 -1188.2)" fill="#fff"/></svg>
						</div>
					</div>
					<div class="main__options-list-item-info">
						<h6>Analytic</h6>
						<small>View Analytics of this service</small> 
					</div>
					<div class="main__options-list-item-arrow">
						<% if current_page?(cdn_url) %>
						<div class="arrow_ic">
							<svg xmlns="http://www.w3.org/2000/svg" width="7.4" height="12" viewBox="0 0 7.4 12"><path d="M267.3,398.2l4.6-4.6-4.6-4.6,1.4-1.4,6,6-6,6Z" transform="translate(-267.3 -387.6)" fill="#f68100"/></svg>

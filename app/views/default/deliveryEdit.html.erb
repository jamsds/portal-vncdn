<div class="portal__main-heading">
	<a href="<%= delivery_url %>" class="back">Back</a>
</div>
<div class="portal__main-left expanded">
	<div class="panel">
		<div class="panel__list">
			panel.delivery.list
		</div>
	</div>
</div>
<div class="portal__main-center primary croped">
	<div class="dashboard">
		<div class="dashboard__container">
			<% if current_user.phone.nil? %>
			<div class="dashboard__container-message warning">
				dashboard.container.message
			</div>
			<% end %>
			<div class="dashboard__container-card clearfix">
				<div class="dashboard__container-card">
					<div class="dashboard__container-card-item">
						<div class="delivery">
							<h5>Edit Domain/File Download</h5>
							<% if params[:type] == "d" %>
								<%= form_tag(delivery_update_url, method: "put", class: 'mt-3') do |f| %>
									<div class="form-group">
									  <%= label_tag(:deliveryUrl, "Delivery Domain Name") %>
									  <%= text_field_tag(:deliveryUrl, "#{@deliveryUrl}", class: 'form-control', disabled: true) %>
									  <%= hidden_field_tag(:propertyId, "#{params[:propertyId]}") %>
									  <small id="domainlHelp" class="form-text text-muted">Domain name can only contain lowercase letters, digits, hyphens, or periods. Please enter a valid domain name. E.g: 'www.domain.com'.</small>
									</div>
									<div class="form-group">
									  <%= label_tag(:originUrl, "Delivery Domain Name") %>
									  <%= text_field_tag(:originUrl, "#{@originUrl}", class: 'form-control') %>
									  <small id="domainlHelp" class="form-text text-muted">Origin domain name can only contain lowercase letters, digits, hyphens, or periods. Please enter a valid origin serer host name or IP. E.g: 'origin.domain.com'.</small>
									</div>
									<div class="custom-control custom-checkbox">
										<%= check_box_tag(:streamingService, "#{@streamingService}", @streamingService, class: 'custom-control-input') %>
										<%= label_tag(:streamingService, "Enable Streaming", class: 'custom-control-label') %>
									</div>

									<div class="custom-control custom-checkbox">
										<%= check_box_tag(:deliveryStatus, "#{@deliveryStatus}", @deliveryStatus, class: 'custom-control-input') %>
										<%= label_tag(:deliveryStatus, "Enable Service", class: 'custom-control-label') %>
									</div>

									<div class="text-left mt-3">
		  							<%= submit_tag("Submit", class: 'btn btn-default primary') %>
		  						</div>
								<% end %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="portal__main-left">
	<div class="panel">
		<div class="panel__heading">
			panel.delivery.heading
		</div>
		<div class="panel__list">
			<a href="<%= delivery_url %>" class="panel__list-item">Domain/File Download Name</a>
			<a href="<%= delivery_url %>?deliveryAction=create" class="panel__list-item">New Domain/File Download Name</a>
		</div>
	</div>
</div>
<div class="portal__main-center primary">
	<div class="dashboard">
		<div class="dashboard__heading">
			delivery.heading
		</div>
		<div class="dashboard__container">
			<% if current_user.phone.nil? %>
			<div class="dashboard__container-message warning">
				dashboard.container.message
			</div>
			<% end %>
			<div class="dashboard__container-card clearfix">
				<div class="dashboard__container-card">
					<% if params[:deliveryAction].nil? %>
					<div class="dashboard__container-card-item">
						delivery.list.domain
						<div class="delivery mt-3">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>Domain/File Download Name</th>
										<th>Status</th>
									</tr>
								</thead>
								<tbody>
									<% @delivery.each do |item| %>
									<tr>
										<td><%= item["name"] %></td>
										<td><%= item["active"] %></td>
									</tr>
									<% end %>
									<% @download.each do |item| %>
									<tr>
										<td><%= item["name"] %></td>
										<td><%= item["active"] %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
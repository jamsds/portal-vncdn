<div class="signin__content">
  <div class="container">
  	<%= render "users/shared/head" %>
    <div class="wrapper">
    	<h3>Forgot your password?</h3>
    	
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <div class="form-group mt-4">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, :class => 'form-control', autofocus: true, autocomplete: "email" %>
			  </div>

			  <div class="mt-3">
			    <%= f.submit "Send me reset password instructions", :class => 'btn btn-default primary btn-block mb-3' %>
			    <div class="signup__refer">
            <div class="signup__refer-heading">
              <p>Sign in with another account</p>
            </div>
            <div class="signup__refer-content">
              <a href="<%= root_url %>" class="btn btn-light btn-block">Customer Sign in</a>
            </div>
          </div>
			  </div>
			<% end %>
		</div>
		<div class="signin__content-footer">
      <p>Â© <%= Date.current.strftime("%Y") %> <%= @parent_uuid.company %></span>
    </div>
	</div>
</div>
<%= form_tag account_charges_test_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= ApplicationController::FormatNumber.new(@totalPrice).formatCurrency() %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-description="A month's subscription"
    data-amount="<%= @totalPrice %>"
    data-locale="auto"
    data-currency="vnd">
  </script>
<% end %>